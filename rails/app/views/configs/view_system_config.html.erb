<h1>FaxOCR設定</h1>
<p style="color: green"><%= flash[:notice] %></p>

<br>
<%= form_tag('/configs/update_system_config', {:method => 'post'}) do %>
<center>
  <%= text_area :body, '', :style => 'width: 95%; height: 250px;', :value => @raw_config %>
</center>
<br>

<table width="100%">
<tr>
  <td align="left">File Path: <%= @config_file_path %></td>
  <td align="right"><%= submit_tag '変更' %></td>
</tr>
</table>
<% end %>
